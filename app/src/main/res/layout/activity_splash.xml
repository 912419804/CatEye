<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/landing_background"/>

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_eye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_eye_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_eye_white"/>

            <ImageView
                android:id="@+id/iv_eye_inner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_eye_black_inner"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_eye_outer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_eye_black_outer"
                android:visibility="gone"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.franky.cateye.view.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/splash_title_en"
                android:textColor="@android:color/white"
                app:font="Lobster-1.4.otf"/>

            <com.franky.cateye.view.FontTextView
                android:id="@+id/ftv_title_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/splash_title_en"
                android:textColor="@color/c_444444"
                android:visibility="gone"
                app:font="Lobster-1.4.otf"/>
        </FrameLayout>


    </LinearLayout>


    <com.franky.cateye.view.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/splash_title_cn"
        android:textColor="@color/c_ffffff"
        app:font="FZLanTingHeiS-DB1-GB-Regular.TTF"/>

    <com.franky.cateye.view.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_60"
        android:text="@string/splash_words_en"
        android:textColor="@android:color/white"
        app:font="Lobster-1.4.otf"/>

    <com.franky.cateye.view.FontTextView
        android:id="@+id/ftv_title_black_en"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_60"
        android:text="@string/splash_words_en"
        android:textColor="@color/c_444444"
        android:visibility="gone"
        app:font="Lobster-1.4.otf"/>

    <com.franky.cateye.view.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_40"
        android:text="@string/splash_words_cn"
        android:textColor="@android:color/white"
        app:font="FZLanTingHeiS-L-GB-Regular.TTF"/>

    <com.franky.cateye.view.FontTextView
        android:id="@+id/ftv_title_black_cn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_40"
        android:text="@string/splash_words_cn"
        android:textColor="@color/c_444444"
        android:visibility="gone"
        app:font="FZLanTingHeiS-L-GB-Regular.TTF"/>

</RelativeLayout>